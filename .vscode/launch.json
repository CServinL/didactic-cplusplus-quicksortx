{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug (WSL - CMake)",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/build/quicksortx",
      "args": [],
      "stopAtEntry": false,
      "cwd": "${workspaceFolder}",
      "MIMode": "gdb",
      "miDebuggerPath": "/usr/bin/gdb",
      "setupCommands": [
        {
          "description": "Enable pretty printing",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        }
      ],
      "externalConsole": false
    }
  ]
}
